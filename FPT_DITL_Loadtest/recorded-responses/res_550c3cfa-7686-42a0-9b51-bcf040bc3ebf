jQuery.sap.declare({modName:"com.sap.fioribi.components.actionpanel.ActionPanelView",type:"view"});jQuery.sap.require({modName:"com.sap.fioribi.modules.common.BILPView",type:"view"});com.sap.fioribi.components.actionpanel.ActionPanelView=function(){com.sap.fioribi.modules.common.BILPView.apply(this,arguments);};com.sap.fioribi.components.actionpanel.ActionPanelView.prototype=jQuery.sap.newObject(com.sap.fioribi.modules.common.BILPView.prototype);com.sap.fioribi.components.actionpanel.ActionPanelView.prototype.getControllerName=function(){return"com.sap.fioribi.components.actionpanel.ActionPanelController";};com.sap.fioribi.components.actionpanel.ActionPanelView.prototype.renderActionPanel=function(){var $this=this;var actionIcon=new sap.m.Image({src:"{icon/src}",width:"32px",height:"32px",mode:sap.m.ImageMode.Background,backgroundSize:"initial",backgroundPosition:"{icon/position}",});var subMenuSelectHandler=function(oControlEvent){console.log(oControlEvent.getSource());$this.getController().peformAction(oEvent.getSource().getModel().getBindingContext());};this.actionMenu=new sap.ui.unified.Menu({items:{path:"/actions/entries",template:new sap.ui.unified.MenuItem({text:"{displayname}",select:function(oEvent){if(oEvent.getSource().getSubmenu()==null){sap.ui.core.BusyIndicator.show(0);setTimeout($.proxy(function(){if(this.getBindingContext().getProperty(this.getBindingContext().sPath).actionname==="copy_opendoc_link"){$this.getController().copyOpenDocUrl(this.getBindingContext().getProperty(this.getBindingContext().sPath));}else{$this.getController().peformAction(this.getBindingContext().getProperty(this.getBindingContext().sPath));}sap.ui.core.BusyIndicator.hide();},this),10);}else{if(this.getBindingContext().getProperty(this.getBindingContext().sPath).actionname!="organize"){$this.getController().peformAction(this.getBindingContext().getProperty(this.getBindingContext().sPath));}}},submenu:new sap.ui.unified.Menu({items:[new sap.ui.unified.MenuItem({text:{parts:["/actions/entries/"],formatter:function(list){var actions=this.getBindingContext().getProperty("actions");if(actions==null||actions.length==0){this.getParent().destroy();return;}else{for(i=0;i<actions.length;i++){var actionsModel=new sap.ui.model.json.JSONModel(actions[i]);var subMenuItems=new sap.ui.unified.MenuItem({text:"{/displayname}",select:function(oEvent){if(oEvent.getSource().getSubmenu()==null){sap.ui.core.BusyIndicator.show(0);setTimeout($.proxy(function(){$this.getController().peformAction(this.getModel().getData());sap.ui.core.BusyIndicator.hide();},this),10);}else{$this.getController().peformAction(this.getModel().getData());}}}).setModel(actionsModel);this.getParent().addItem(subMenuItems);}this.destroy();return subMenuItems;}}}})]}).addStyleClass("BILPPadding_8")})}}).addStyleClass("BILPPadding_8");this.actionMenu.setModel(this.getController().model);return this.actionMenu;};com.sap.fioribi.components.actionpanel.ActionPanelView.prototype.createContent=function(oController){};