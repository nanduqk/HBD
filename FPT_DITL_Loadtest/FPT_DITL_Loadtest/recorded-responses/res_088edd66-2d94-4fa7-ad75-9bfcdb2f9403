jQuery.sap.declare({modName:"com.sap.fioribi.modules.search.SearchServices"});jQuery.sap.require("com.sap.fioribi.modules.search.SearchConstants");com.sap.fioribi.modules.search.SearchService=function(){};com.sap.fioribi.modules.search.SearchService.getDocumentFilterString=function(){if(com.sap.fioribi.modules.search.SearchService.DOCUMENT_FILTER==null){com.sap.fioribi.modules.search.SearchService.DOCUMENT_FILTER=" and (";for(var i=0;i<com.sap.fioribi.modules.search.SearchConstants.DOCUMENT_TYPES.length;i++){if(i>0){com.sap.fioribi.modules.search.SearchService.DOCUMENT_FILTER+=" or ";}com.sap.fioribi.modules.search.SearchService.DOCUMENT_FILTER+="kind:"+com.sap.fioribi.modules.search.SearchConstants.DOCUMENT_TYPES[i];}com.sap.fioribi.modules.search.SearchService.DOCUMENT_FILTER+=")";}return com.sap.fioribi.modules.search.SearchService.DOCUMENT_FILTER;};com.sap.fioribi.modules.search.SearchService.getDocumentFilterExcludeString=function(){if(com.sap.fioribi.modules.search.SearchService.DOCUMENT_FILTER_EXCLUDE==null){com.sap.fioribi.modules.search.SearchService.DOCUMENT_FILTER_EXCLUDE=" and NOT(";for(var i=0;i<com.sap.fioribi.modules.search.SearchConstants.EXCLUDED_DOCUMENT_TYPES.length;i++){if(i>0){com.sap.fioribi.modules.search.SearchService.DOCUMENT_FILTER_EXCLUDE+=" or ";}com.sap.fioribi.modules.search.SearchService.DOCUMENT_FILTER_EXCLUDE+="kind:"+com.sap.fioribi.modules.search.SearchConstants.EXCLUDED_DOCUMENT_TYPES[i];}com.sap.fioribi.modules.search.SearchService.DOCUMENT_FILTER_EXCLUDE+=")";}return com.sap.fioribi.modules.search.SearchService.DOCUMENT_FILTER_EXCLUDE;};com.sap.fioribi.modules.search.SearchService.buildSearchString=function(searchText,searchFieldFilter,searchFilteringType){var finalSearchString=searchText;if(searchFieldFilter==com.sap.fioribi.modules.search.SearchConstants.TITLE_KEY){finalSearchString="title:("+finalSearchString+")";}if(searchFilteringType==com.sap.fioribi.modules.search.SearchConstants.ALL_DOCUMENTS_KEY){finalSearchString+=com.sap.fioribi.modules.search.SearchService.getDocumentFilterExcludeString();}return finalSearchString;};com.sap.fioribi.modules.search.SearchService.search=function(searchText,searchCategories,page,pageSize,retrieveFacets,success,error){jQuery.sap.require("com.sap.fioribi.utils.RequestDispatcher");var reqDispatcher=new RequestDispatcher();var getSearchListError=function(thrownError){console.log("Failed to get Search Results");if(error){error(thrownError);}}.bind(this);var getSearchListSuccess=function(response){if(success){success(response);}}.bind(this);var payload={searchText:searchText,filters:[],parameters:{retrieveFacets:retrieveFacets}};if(searchCategories!=null){for(var i=0;i<searchCategories.length;i++){var searchCategory=searchCategories[i];if(searchCategory.category!=com.sap.fioribi.modules.search.SearchConstants.FIELDS_KEY){payload.filters.push({type:searchCategory.category,value:searchCategory.value});}}}var request={surl:BILaunchpadApp.getWebServiceBaseURL()+"/v1/search/?page="+page+"&pagesize="+pageSize+"&locale="+sap.ui.getCore().getConfiguration().getLanguage(),reqType:"POST",data:JSON.stringify(payload),successHandler:getSearchListSuccess,errorHandler:getSearchListError,headers:{"x-SAP-logonToken":BILaunchpadApp.getlogonToken(),Accept:"application/json","Content-Type":"application/json;odata=verbose",}};reqDispatcher.sendRequest(request);};