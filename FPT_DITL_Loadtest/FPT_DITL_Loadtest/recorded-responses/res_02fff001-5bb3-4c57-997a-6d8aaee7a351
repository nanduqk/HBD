jQuery.sap.declare({modName:"com.sap.fioribi.modules.search.searchBarView",type:"view"});jQuery.sap.require({modName:"com.sap.fioribi.modules.common.BILPView",type:"view"});jQuery.sap.require("sap.ui.core.IconPool");jQuery.sap.require("com.sap.fioribi.modules.search.SearchService");com.sap.fioribi.modules.search.searchBarView=function(){com.sap.fioribi.modules.common.BILPView.apply(this,arguments);};com.sap.fioribi.modules.search.searchBarView.prototype=jQuery.sap.newObject(com.sap.fioribi.modules.common.BILPView.prototype);com.sap.fioribi.modules.search.searchBarView.prototype.getControllerName=function(){return"com.sap.fioribi.modules.search.searchBarController";};com.sap.fioribi.modules.search.searchBarView.prototype.createContent=function(oController){BILaunchpadApp.includeStyleSheet("com/sap/fioribi/css/Search.css");BILaunchpadApp.searchBarView=this;var oSearchLayout=new sap.ui.layout.HorizontalLayout();oSearchLayout.addStyleClass("BILP-searchLayout");this._oSearchField=new sap.m.SearchField({enableListSuggest:true,showListExpander:false,startSuggestion:2,width:"100%",search:function(){if(this._searchTimeout){clearTimeout(this._searchTimeout);}this._searchSuggestionStillValid=false;var searchText=this._oSearchField.getValue();if(searchText.length>0&&!(/^ *$/.test(searchText))){sap.ui.core.BusyIndicator.show(0);setTimeout($.proxy(function(){this.getController().callSearchCallbacks(searchText,null,null);sap.ui.core.BusyIndicator.hide();},this),10);}}.bind(this),liveChange:function(oEvent){this._oSearchField.removeAllSuggestionItems();var searchText=this._oSearchField.getValue();if(searchText.length>2&&!(/^ *$/.test(searchText))){if(this._searchTimeout){clearTimeout(this._searchTimeout);}this._searchSuggestionStillValid=true;this._searchTextValid=searchText;this._searchTimeout=setTimeout(function(){this.getController().search(searchText,null,null,1,6,function(sText,oModel){if(this._searchSuggestionStillValid&&this._searchTextValid==sText){this._oSearchField.removeAllSuggestionItems();var searchList=oModel.getData().list;for(var i=0;i<searchList.length;i++){var searchListItem=searchList[i];var suggestionItem=new sap.m.SuggestionItem();suggestionItem.setText(searchListItem.name);suggestionItem.setIcon(searchListItem.iconURL);this._oSearchField.addSuggestionItem(suggestionItem);}this._oSearchField.suggest();}}.bind(this,searchText));}.bind(this),400);}}.bind(this)});this._oSearchField.setEnableSuggestions(true);this._oSearchField.addStyleClass("BILP-searchField sapUiSizeCompact");var that=this;this._oSearchField.onAfterRendering=function(){sap.m.SearchField.prototype.onAfterRendering.apply(this,arguments);that._oSearchField.$().find("input").attr("readonly",false);$(that._oSearchField.getFocusDomRef()).focusin(function(){oController.callFocusInCallbacks();});$(that._oSearchField.getFocusDomRef()).focusout(function(){oController.callFocusOutCallbacks();});};oSearchLayout.addContent(this._oSearchField);return oSearchLayout;};com.sap.fioribi.modules.search.searchBarView.prototype.getSearchedLabel=function(){return this._oSearchField.getValue();};com.sap.fioribi.modules.search.searchBarView.prototype.setSearchedLabel=function(searchedLabel){this._oSearchField.setValue(searchedLabel);};com.sap.fioribi.modules.search.searchBarView.prototype.setSearchSuggestionStillValid=function(searchSuggestionStillValid){this._searchSuggestionStillValid=searchSuggestionStillValid;};com.sap.fioribi.modules.search.searchBarView.prototype.onAfterRendering=function(){this._oSearchField.setValue(searchedLabel);};com.sap.fioribi.modules.search.searchBarView.prototype.focus=function(){this._oSearchField.getFocusDomRef().select();};