jQuery.sap.declare({modName:"com.sap.fioribi.modules.notifications.NotificationController",type:"controller"});jQuery.sap.require({modName:"com.sap.fioribi.modules.common.BILPController",type:"controller"});com.sap.fioribi.modules.notifications.NotificationController=function(){com.sap.fioribi.modules.common.BILPController.apply(this,arguments);};com.sap.fioribi.modules.notifications.NotificationController.prototype=jQuery.sap.newObject(com.sap.fioribi.modules.common.BILPController.prototype);com.sap.fioribi.modules.notifications.NotificationController.prototype.onInit=function(){notificationController=this;this.bannerNotification();};com.sap.fioribi.modules.notifications.NotificationController.prototype.bannerNotification=function(){var pollingTime=notificationPollingTime;jQuery.sap.require("com.sap.fioribi.utils.RequestDispatcher");var reqDispatcher=new RequestDispatcher();var getInboxListSuccess=function(response){notificationController.getView().setNotificationBanner(response);};var handleInboxListError=function(xhr,ajaxOptions,thrownError){var clsBtn=new sap.m.Button({text:BILaunchpadApp.localized("Recycle_Bin_Close"),press:$.proxy(function(){BILaunchpadApp.setStopNotificationCall(false);errDialog.close();},this)});var errDialog=new sap.m.Dialog({afterOpen:function(){if(xhr.status==undefined){BILaunchpadApp.setStopNotificationCall(true);}}}).addButton(clsBtn);if(BILaunchpadApp.getStopNotificationCall()==false||(BILaunchpadApp.getStopNotificationCall()==true&&xhr.status!=undefined)){errDialog.open();errDialog.setTitle(BILaunchpadApp.localized("Error"));BILaunchpadApp.oErrorHandler.showErrorMessage(xhr,errDialog);}};var request={surl:BILaunchpadApp.getWebServiceBaseURL()+"/v1/notification/now",reqType:"GET",successHandler:getInboxListSuccess,errorHandler:handleInboxListError,headers:{"x-SAP-logonToken":BILaunchpadApp.getlogonToken(),Accept:"application/json","Content-Type":"application/json;odata=verbose",}};if(BILaunchpadApp.isSessionTimeOut()==false){reqDispatcher.sendRequest(request);}if(notificationPollingEnabled!=null&&notificationPollingEnabled=="true"){setTimeout(notificationController.bannerNotification,pollingTime);}};com.sap.fioribi.modules.notifications.NotificationController.prototype.markAsRead=function(notifcationId){var isAlert=false;var $this=this;var globalCafInitiated=false;var reqBody={};reqBody.entries=[];reqBody.entries.push({id:""+notifcationId,read:true});var successHandler=function(response){var eventBus=sap.ui.getCore().getEventBus();var payLoad={};payLoad.globalCafInitiated=globalCafInitiated;payLoad.markedAsRead=true;sap.ui.core.BusyIndicator.hide();eventBus.publish(BILaunchpadApp.oConstants.PLATFORM_INTERNAL_CHANNEL,"viewInboxTab",JSON.stringify(payLoad));};var failedHandler=function(xhr,ajaxOptions,thrownError){sap.m.MessageToast.show(BILaunchpadApp.localized("failed_to_mark_as_read"),{autoClose:true});sap.ui.core.BusyIndicator.hide();};var reqDispatcher=new RequestDispatcher();var request={reqType:"POST",successHandler:successHandler,errorHandler:failedHandler,headers:{"x-SAP-logonToken":BILaunchpadApp.getlogonToken(),Accept:"application/json","Content-Type":"application/json;odata=verbose",}};request.surl=BILaunchpadApp.getWebServiceBaseURL()+"/v1/notification";request.data=JSON.stringify(reqBody);sap.ui.core.BusyIndicator.show(0);request.bAsync=false;reqDispatcher.sendRequest(request);};