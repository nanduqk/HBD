sap.ui.jsfragment("com.sap.fioribi.modules.homepage.SettingsPopUp",{createContent:function(oController){BILaunchpadApp.includeStyleSheet("com/sap/fioribi/css/UserSettings.css");var popover=new sap.m.Popover({placement:sap.m.PlacementType.Bottom,showHeader:false});var oList=new sap.m.List({backgroundDesign:sap.m.BackgroundDesign.Transparent});var oItem=new sap.m.StandardListItem({type:sap.m.ListType.Active,icon:"sap-icon://action-settings",title:BILaunchpadApp.localized("UserSettings_Settings"),press:function(){sap.ui.core.BusyIndicator.show(0);setTimeout(function(){BILaunchpadApp.settings.firePress();sap.ui.core.BusyIndicator.hide();},10);}}).addStyleClass("ListItemFontSize StandardListItemRemoveBorder");var oItem1=new sap.m.StandardListItem({type:sap.m.ListType.Active,icon:"sap-icon://edit",title:BILaunchpadApp.localized("edit_home_page"),press:function(){sap.ui.core.BusyIndicator.show(0);setTimeout(function(){BILaunchpadApp.editHomePageIcon.firePress();sap.ui.core.BusyIndicator.hide();},10);}}).addStyleClass("ListItemFontSize StandardListItemAddBorder");var oItem2=new sap.m.StandardListItem({type:sap.m.ListType.Active,icon:"sap-icon://lightbulb",title:BILaunchpadApp.localized("UserSettings_About"),press:function(){sap.ui.core.BusyIndicator.show(0);setTimeout(function(){BILaunchpadApp.about.firePress();sap.ui.core.BusyIndicator.hide();},10);}}).addStyleClass("ListItemFontSize StandardListItemAddBorder");var oItem3=new sap.m.StandardListItem({type:sap.m.ListType.Active,icon:"sap-icon://sys-help-2",title:BILaunchpadApp.localized("UserSettings_Help"),press:function(){sap.ui.core.BusyIndicator.show(0);setTimeout(function(){var locale=BILaunchpadApp.getProductLocale();locale=locale.replace(/_/g,"-");var lang=locale.slice(0,2);var sResourceBundlePath;if(offlinehelpflag!=null&&offlinehelpflag=="true"){sResourceBundlePath=offlinehelpurl+"FBILP/"+lang+"/frameset.htm";}else{sResourceBundlePath="https://help.sap.com/viewer/baaf5c869e824d07ab0109e7b093348e/4.3.2/"+locale;}openInNewTab(sResourceBundlePath);function openInNewTab(path){var newTab=window.open();newTab.opener=null;newTab.location=path;}sap.ui.core.BusyIndicator.hide();},10);}}).addStyleClass("ListItemFontSize StandardListItemRemoveBorder");var oItem4=new sap.m.StandardListItem({type:sap.m.ListType.Active,icon:"sap-icon://log",title:BILaunchpadApp.localized("UserSettings_Logout"),press:function(){sap.ui.core.BusyIndicator.show(0);setTimeout(function(){BILaunchpadApp.logout.firePress();sap.ui.core.BusyIndicator.hide();},10);}}).addStyleClass("ListItemFontSize StandardListItemRemoveBorder");oList.addItem(oItem);oList.addItem(oItem1);oList.addItem(oItem3);oList.addItem(oItem2);oList.addItem(oItem4);popover.addContent(oList);return popover;}});